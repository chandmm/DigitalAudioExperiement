<UserControl x:Class="DigitalAudioExperiment.View.Components.PanelControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalAudioExperiment.View.Components"
             xmlns:controls="clr-namespace:WpfAudioControlLibrary.Controls;assembly=WpfAudioControlLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Themes/DaeThematics.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="2" BorderBrush="Silver" Background="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="9" Style="{StaticResource MonoStereoDisplayComponentGridStyle}" Margin="5">
                    <Rectangle/>
                    <TextBlock/>
                </Grid>
                <!--Place holder for VU controls-->
                <controls:VUControl 
                    Mark1="-20"
                    Mark2="-10"
                    Mark3="0"
                    Mark4="+3"
                    Minimum="-20"
                    Maximum="0"
                    Value="-10"
                    Grid.Row="6" 
                    Grid.RowSpan="4" 
                    Margin="5"/>
                <controls:VUControl
                    Mark1="-20"
                    Mark2="-10"
                    Mark3="0"
                    Mark4="+3"
                    Minimum="0"
                    Maximum="100"
                    Value="0"
                    Grid.Row="6" 
                    Grid.RowSpan="4" 
                    Grid.Column="1" 
                    Margin="5"/>
                <!--<Rectangle Grid.Row="6" Grid.RowSpan="4" Stroke="Silver" StrokeThickness="1" Fill="Cyan" Margin="5"/>-->
                <!--<Rectangle Grid.Row="6" Grid.RowSpan="4" Grid.Column="1" Stroke="Silver" StrokeThickness="1" Fill="Cyan" Margin="5"/>-->
                <!-- VU VU -->
                <!--<Slider x:Name="PlaceHolder" Grid.Row="6" Grid.RowSpan="4" Grid.Column="4" Grid.ColumnSpan="6" VerticalAlignment="Center" Margin="5" TickPlacement="TopLeft" Minimum="-60" Maximum="0" Value="-30"/>-->
                <controls:SeekSiderControl 
                    TickFrequency="2" 
                    Minimum="0" 
                    Maximum="100" 
                    Value="40" Grid.Row="6"
                    ElapsedMinutes="2"
                    ElapsedSeconds="30"
                    ElapsedHours="90"
                    DurationMinutes="5"
                    DurationSeconds="1"
                    DurationHours="95"
                    Grid.RowSpan="4" 
                    Grid.Column="2" 
                    Grid.ColumnSpan="8"/>
                <TextBox 
                    x:Name="playbackInfo"
                    IsReadOnly="True" 
                    BorderThickness="0" 
                    TextWrapping="Wrap" 
                    Text="Sampling Rate: 44.1 kHz BPS: 128 kbps" 
                    Background="Black" 
                    Foreground="SteelBlue" 
                    Grid.RowSpan="6" 
                    Margin="5"/>
                <TextBox IsReadOnly="True" BorderThickness="0" Text="Title: Some song title" Background="Black" Foreground="SteelBlue" Grid.RowSpan="6" Grid.ColumnSpan="3" Grid.Column="1" Margin="5"/>
                <Rectangle Fill="Transparent" Grid.RowSpan="6" Margin="5" Width="{Binding Width, ElementName=playbackInfo}" Height="{Binding Height, ElementName=playbackInfo}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
