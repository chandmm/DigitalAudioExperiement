<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Image" x:Key="ReceiverFacePlateImageKey">
        <Setter Property="Source" Value="/Resources/ReceiverFacePlate.jpg"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="TextBlockTitleStyle">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Ariel"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="TextBlockSubTitleStyle">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Ariel"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>

    <ControlTemplate x:Key="StereoIndicatorKey">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="Blue"/>
            <Rectangle Grid.Column="1" Fill="Red"/>
            <TextBlock Text="MONO" Margin="5"/>
            <TextBlock Grid.Column="1" Text="STEREO" Margin="5"/>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>    